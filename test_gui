#!/bin/bash

# Simple test script to launch CodeBeats GUI
echo "🎵 Testing CodeBeats GUI..."

if [ -f "target/release/codebeats-gui" ]; then
    echo "✅ Found GUI binary, launching..."
    ./target/release/codebeats-gui
elif [ -f "releases/CodeBeats.app/Contents/MacOS/CodeBeats" ]; then
    echo "✅ Found .app bundle, launching..."
    ./releases/CodeBeats.app/Contents/MacOS/CodeBeats
else
    echo "❌ No GUI binary found. Run ./build_package first."
    exit 1
fi
